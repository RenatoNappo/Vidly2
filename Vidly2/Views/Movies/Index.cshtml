@model List<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br />
@if (Model.Count == 0)
{
    <h4>There are currently no movies to rent.</h4>
}
else
{
    @Html.ActionLink("New Movie", "NewMovie", "Movies", null , new { @class = "btn btn-primary" })

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr class="table-active">
                    <td>
                        @Html.ActionLink(m.Name, "EditMovie", "Movies", new { id = m.Id }, null)
                    </td>
                    <td>@m.Genre.GenreDescription</td>
                </tr>
            }
        </tbody>
    </table>
}