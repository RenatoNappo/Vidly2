@model Vidly2.Models.Movie

@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Details</h2>
<br />
<h1>@Model.Name</h1>
<ul>
    <li>Genre: @Model.Genre.GenreDescription</li>
    <li>Release Date : @Model.ReleaseDate.DayOfWeek, @Model.ReleaseDate.ToString("MMMM") @Model.ReleaseDate.Day, @Model.ReleaseDate.Year</li>
    <li>Date Added : @Model.DateAdded.DayOfWeek, @Model.DateAdded.ToString("MMMM"), @Model.DateAdded.Day, @Model.DateAdded.Year</li>
    <li>Number in Stock : @Model.NumberInStock</li>
</ul>

<br />
<br />
@Html.ActionLink("Movie List", "Index", "Movies")

